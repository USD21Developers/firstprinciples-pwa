	<phrase id="1" desc="title">
		<original>
			Christ Is Your Life
		</original>
		<translated>
			Cristo é sua vida
		</translated>
	</phrase>

	<phrase id="2" desc="">
		<original>
			Introduction
		</original>
		<translated>
			Introdução
		</translated>
	</phrase>

	<phrase id="3" desc="">
		<original>
			Discuss:
		</original>
		<translated>
			Discuta:
		</translated>
	</phrase>

	<phrase id="4" desc="">
		<original>
			Did you have daily quiet times this past week?
		</original>
		<translated>
			Você teve tempos com Deus diariamente durante a semana que passou?
		</translated>
	</phrase>

	<phrase id="5" desc="">
		<original>
			Who did you share with and invite?
		</original>
		<translated>
			Com quem você compartilhou e a quem você convidou?
		</translated>
	</phrase>

	<phrase id="6" desc="">
		<original>
			Discuss the impact of communion on Sunday.
		</original>
		<translated>
			Discuta o impacto da santa ceia no domingo.
		</translated>
	</phrase>

	<phrase id="7" desc="">
		<original>
			Colossians 3:1-4: Raised to a new life
		</original>
		<translated>
			Colossenses 3:1-4: Ressuscitado para uma vida nova
		</translated>
		<change bold="true" italic="false" modal="true" scripturekey="colossians-3-1-4">
			<original>
				Colossians 3:1-4
			</original>
			<translated>
				Colossenses 3:1-4
			</translated>
		</change>
	</phrase>

	<phrase id="8" desc="">
		<original>
			Raised with Christ in baptism (Colossians 2:12).
		</original>
		<translated>
			Ressuscitado com Cristo no batismo (Colossenses 2:12);
		</translated>
		<change bold="true" italic="false" modal="true" scripturekey="colossians-2-12">
			<original>
				Colossians 2:12
			</original>
			<translated>
				Colossenses 2:12
			</translated>
		</change>
	</phrase>

	<phrase id="9" desc="">
		<original>
			The Holy Spirit, received at baptism, gives you the power to set your mind (thoughts) and set your heart (emotions) on things above.
		</original>
		<translated>
			O Espírito Santo, recebido no batismo, lhe dá o poder de fixar sua mente (pensamentos) e seu coração (emoções) em coisas do alto;
		</translated>
	</phrase>

	<phrase id="10" desc="">
		<original>
			Christ is your life.
		</original>
		<translated>
			Cristo é sua vida.
		</translated>
	</phrase>

	<phrase id="11" desc="">
		<original>
			Colossians 3:5-11: Put to death
		</original>
		<translated>
			Colossenses 3:5-11: Faça morrer
		</translated>
		<change bold="true" italic="false" modal="true" scripturekey="colossians-3-5-11">
