<scripture key="matthew-7-7-8" lang="en" version="niv" edition="1984">
	<passage title="Matthew 7:7-8" book="Matthew" book-en="Matthew">
		<chapter number="7" number-en="7">
			<verse number="7" number-en="7" jesuswords="true">
				<p class="scripture-heading">
					Ask, Seek, Knock
				</p>
				<span class="jesuswords">Ask and it will be given to you; seek and you will find; knock and the door will be opened to you.</span>
			</verse>
			<verse number="8" number-en="8" jesuswords="true">
				<span class="jesuswords">For everyone who asks receives; he who seeks finds; and to him who knocks, the door will be opened.</span>
			</verse>
		</chapter>
	</passage>
</scripture>

